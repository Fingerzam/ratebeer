<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @beer_club.name %>
</p>

<p>
  <b>Founded:</b>
  <%= @beer_club.founded %>
</p>

<p>
  <b>City:</b>
  <%= @beer_club.city %>
</p>

<p>
  <b>Members:</b>
  <ul>
    <% for m in @beer_club.memberships %>
      <li>
      <%= link_to m.user.to_s, m.user %>
      </li>
    <% end %>
  </ul>
</p>

<% unless current_user.nil? or @beer_club.members.member?(current_user) %>
  <p>
    <%= form_for(@membership) do |f| %>
      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :beer_club_id %>
      <%= f.submit "Join this club" %>
    <% end %>
  </p>
<% end %>


<% unless current_user.nil? %>
  <%= link_to 'Edit', edit_beer_club_path(@beer_club), class: "btn" %>
  <% if current_user.admin %>
    <%= link_to 'Destroy', @beer_club, method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <% end %>
<% end %>
